<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.ems</groupId>
		<artifactId>EMS</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<groupId>com.ems.utility</groupId>
	<artifactId>utility</artifactId>
	<packaging>jar</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<classifier>exec</classifier>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>0.8.8</version>
				<executions>
					<execution>
						<id>jacoco-check</id>
						<goals>
							<goal>check</goal>
						</goals>
						<configuration>
							<excludes>
								<exclude>com/ems/constants/CommonMessagesConstants.class</exclude>
								<exclude>com/ems/customexception/EmployeeNotFoundException.class</exclude>
								<exclude>com/ems/customexception/InvalidAgeException.class</exclude>
								<exclude>com/ems/customexception/InvalidGradeException.class</exclude>
								<exclude>com/ems/customexception/SaveEmployeeDetailsException.class</exclude>
								<exclude>com/ems/EmsApplication.class</exclude>
								<exclude>com/ems/controlleradvice/ExceptionResponseModel.class</exclude>
								<exclude>com/ems/controlleradvice/HandleGlobalException.class</exclude>
							</excludes>
							<rules>
								<rule>
									<element>BUNDLE</element>
									<limits>
										<limit>
											<counter>INSTRUCTION</counter>
											<value>COVEREDRATIO</value>
											<minimum>0.94</minimum>
										</limit>
									</limits>
								</rule>
							</rules>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>